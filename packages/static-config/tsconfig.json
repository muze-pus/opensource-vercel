{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "lib": ["esnext"],
    "target": "es2018",
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "typeRoots": ["./@types", "./node_modules/@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
